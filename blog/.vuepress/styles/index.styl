@import url('https://fonts.googleapis.com/css2?family=Maven+Pro&family=Poppins&family=Rosario&family=Source+Code+Pro&display=swap');

* {
  font-family: 'Poppins', sans-serif !important;
} 

.navbar {
  border-bottom: none;
  box-shadow: 0 0 5em rgba(0, 0, 0, .10);
}

::selection {
    background-color: #ffa31a;
    color: #ffffff;
}

::-moz-selection {
    background-color: #ffa31a;
    color: #ffffff;
}

::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background-color: #000;
}

::-webkit-scrollbar-thumb {
    border: none;
    background-color: #ffa31a;
}

::-webkit-scrollbar-thumb:hover {
    background-color: #ffa31a;
}

.dropdown-wrapper .nav-dropdown, .suggestions {
   box-shadow: 0 0 5em rgba(0, 0, 0, .10);
   border-radius: 10px !important;
   border: none !important;
   padding: 1.2rem 0 !important;
}

.search-box input {
  border: none !important;
  background: #eaecef url(/assets/img/search.83621669.svg) 0.6rem 0.5rem no-repeat !important;
  background-size: 0.9rem !important;

}

h2 {
  border-bottom: none !important;
}

hr, .header-anchor, .vssue-header-powered-by {
  display: none;
}

.custom-block.tip {
  background-color: #eaecef;
  border-color: #4285f4;
  border-radius: 5px;
}

#header {
  height: 100px;
  padding-left: 7%;
  padding-right: 7%;
  text-transform: uppercase;
}

.header-wrapper {
  height: 60px;
  line-height: 60px;
}

.post-title {
  color: #ffa31a !important;
}

.ui-post-title a, .ui-post-summary, .ui-post-author, .ui-post-date, .ui-post-tag {
  color: #fff !important;
}

.nav-link:hover, .nav-link.router-link-active, .feather-rss:hover {
  color: #fff !important;
}

.feather-rss {
  color: #000;
}

.feather-github:hover, .feather-facebook:hover, .feather-linkedin:hover, .feather-youtube:hover {
  color: #ffa31a;
}

.home-link {
  font-size: 20px !important;
}

